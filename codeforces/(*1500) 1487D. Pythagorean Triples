//https://codeforces.com/problemset/problem/1487/D
#include <bits/stdc++.h>
 
using namespace std;
 
#define ff(i , a, b) for (int i = a; i <= b; i++)
#define REP(i , a , b) for (int i = a; i >= b; i--)
 
typedef long long ll;
const ll base = 311;
const ll mod = 1e9 + 7;
const ll oo = 1e7;
 
/********************************************************************************************/
/*******************************************************************************************/
 
int main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);
 
    int t;
    cin >> t;
 
    while(t--)
    {
        ll n;
        cin >> n;
 
        ll cnt = 0;
 
        ll y = 1;
 
        while((y*y + (y+1)*(y+1)) <= n) cnt++ , y++;
 
        cout << cnt << endl;
 
    }
 
 
    return 0;
}
