// https://oj.vnoi.info/problem/lis
#include <bits/stdc++.h>

using namespace std;
#define ff(i , a, b) for(int i = a; i <= int(b); i++)
#define REP(i , a, b) for(int i = a; i >= int(b); i--)
typedef long long ll;
const ll MAXN = 1e6 + 5;
ll arr[MAXN];

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(nullptr);cout.tie(nullptr);
    int N;
    cin >> N;
    vector<ll> v(N+1);
    ff(i , 1 , N) cin >> v[i];
    arr[1] = v[1];
    int lenth = 1;
    ff(i , 2 , N)
    {
        if(v[i] > arr[lenth])
        {
             lenth++;
             arr[lenth] = v[i];
        }
        else if (v[i] <= arr[1]) arr[1] = v[i];
        else arr[lower_bound(arr , arr + lenth , v[i]) - arr] = v[i];
    }
    cout << lenth;

    return 0;
}
